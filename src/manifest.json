{
    "name": "Horrible Subs +",
    "version": "1.0",
    "description": "Simple extension to make Horrible subs more user friendly",
    "manifest_version": 2,
    "permissions": ["activeTab", "storage", "declarativeContent"],
    "background": {
        "scripts": ["main.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_title": "Horrible Subs +",
        "default_icon": {
            "16": "images/HS+16.png",
            "32": "images/HS+32.png",
            "48": "images/HS+48.png",
            "128": "images/HS+128.png"
        }
    },
    "content_scripts": [
        {
            "run_at": "document_idle", 
            "matches": [
                "https://horriblesubs.info/"
            ],
            "js": [
                "imageMarker.js"
            ],
            "css":[
                "main.css"
            ]
        }
    ]
}